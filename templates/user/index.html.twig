{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <h1>Mon compte</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Mon email</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Téléphone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.phoneNumber }}</td>
            </tr>
            <div>
            {{ user.wearList }}
            </div>
            <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier profil</a>
        
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>

                    {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
